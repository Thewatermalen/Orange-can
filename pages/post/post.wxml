<!--pages/post/post.wxml-->
<import src="post-item/post-item-tpl.wxml" />
<view>
    <swiper indicator-dots="true" autoplay="true" interval="5000">
        <swiper-item>
            <image src="/images/post/post-1@text.jpg" mode="" />
        </swiper-item>
        <swiper-item>
            <image src="/images/post/post-2@text.jpg" mode="" />
        </swiper-item>
        <swiper-item>
            <image src="/images/post/post-3@text.jpg" mode="" />
        </swiper-item>
    </swiper>

    <block wx:for="{{postList}}" wx:for-item="item" wx:for-index="idx" wx:key="id">
        <view catch:tap="onTapToDetail" data-post-id="{{item.postId}}">
            <template is="postItemTpl" data="{{...item}}" />
        </view>
    </block>
</view>